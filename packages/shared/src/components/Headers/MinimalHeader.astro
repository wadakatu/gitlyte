---
export interface Props {
  title: string;
  currentPage?: 'home' | 'docs' | string;
  githubUrl?: string;
}

const { title, currentPage = 'home', githubUrl = 'https://github.com/wadakatu/gitlyte' } = Astro.props;
---

<header class="minimal-header">
  <div class="container">
    <nav class="main-nav">
      <div class="nav-brand">
        <h1>{title}</h1>
      </div>
      <div class="nav-links">
        <button class={`nav-link ${currentPage === 'home' ? 'active' : ''}`} onclick="showDemo()">Home</button>
        <button class={`nav-link ${currentPage === 'docs' ? 'active' : ''}`} onclick="showDocs()">Documentation</button>
        <a href={githubUrl} class="nav-link" target="_blank" rel="noopener">GitHub</a>
      </div>
    </nav>
  </div>
</header>

<style>
  .minimal-header {
    border-bottom: 1px solid #e5e5e5;
    background-color: #ffffff;
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 2rem;
    width: 100%;
    box-sizing: border-box;
  }

  .main-nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 0;
  }

  .nav-brand h1 {
    margin: 0;
    font-size: 1.5rem;
    color: #1a1a1a;
    font-weight: 600;
    letter-spacing: -0.02em;
  }

  .nav-links {
    display: flex;
    gap: 2rem;
    align-items: center;
  }

  .nav-link {
    background: none;
    border: none;
    text-decoration: none;
    color: #666666;
    font-size: 0.875rem;
    font-weight: 500;
    transition: color 0.2s ease;
    position: relative;
    cursor: pointer;
    font-family: inherit;
  }

  .nav-link:hover,
  .nav-link.active {
    color: #1a1a1a;
  }

  .nav-link.active::after {
    content: '';
    position: absolute;
    bottom: -1rem;
    left: 0;
    right: 0;
    height: 1px;
    background-color: #1a1a1a;
  }

  @media (max-width: 768px) {
    .main-nav {
      flex-direction: column;
      gap: 1rem;
      padding: 0.75rem 0;
    }

    .nav-links {
      gap: 1rem;
    }
  }
</style>

<script>
  // Wait for global functions to be available and override if needed
  document.addEventListener('DOMContentLoaded', () => {
    const currentPath = window.location.pathname;
    const isMainDemoPage = currentPath === '/' || currentPath === '/index.html' || currentPath === '/gitlyte/' || currentPath === '/gitlyte/index.html';
    
    if (isMainDemoPage) {
      console.log('[MinimalHeader] On main demo page, waiting for global functions');
      
      // Wait a bit for global functions to be available
      setTimeout(() => {
        const hasGlobalFunctions = typeof (window as any).showDemo === 'function' && typeof (window as any).showDocs === 'function';
        console.log('[MinimalHeader] Global functions available?', hasGlobalFunctions);
        
        if (hasGlobalFunctions) {
          console.log('[MinimalHeader] Global functions found, overriding local functions');
          // Override local functions to use global ones
          window.showDemo = (window as any).showDemo;
          window.showDocs = (window as any).showDocs;
        }
      }, 100);
    }
  });

  // Navigation functionality for demo pages
  function showDemo() {
    // Check if we're in demo mode (main demo page)
    const currentPath = window.location.pathname;
    const isMainDemoPage = currentPath === '/' || currentPath === '/index.html' || currentPath === '/gitlyte/' || currentPath === '/gitlyte/index.html';
    
    console.log('[MinimalHeader] showDemo called', { currentPath, isMainDemoPage, hasGlobalShowDemo: typeof (window as any).showDemo === 'function' });
    
    if (isMainDemoPage) {
      // Always check for global function first
      const globalFunction = (window as any).showDemo;
      if (typeof globalFunction === 'function' && globalFunction !== showDemo) {
        console.log('[MinimalHeader] Calling global showDemo');
        globalFunction();
        return; // Prevent further execution
      }
    }
    
    // In individual pages, navigate to home
    console.log('[MinimalHeader] Navigating to home page');
    const isDemoPage = !currentPath.includes('/docs');
    if (!isDemoPage) {
      window.location.href = window.location.pathname.replace('/docs', '');
    }
  }

  function showDocs() {
    // Check if we're in demo mode (main demo page)
    const currentPath = window.location.pathname;
    const isMainDemoPage = currentPath === '/' || currentPath === '/index.html' || currentPath === '/gitlyte/' || currentPath === '/gitlyte/index.html';
    
    console.log('[MinimalHeader] showDocs called', { currentPath, isMainDemoPage, hasGlobalShowDocs: typeof (window as any).showDocs === 'function' });
    
    if (isMainDemoPage) {
      // Always check for global function first
      const globalFunction = (window as any).showDocs;
      if (typeof globalFunction === 'function' && globalFunction !== showDocs) {
        console.log('[MinimalHeader] Calling global showDocs');
        globalFunction();
        return; // Prevent further execution
      }
    }
    
    // In individual pages, navigate to docs
    console.log('[MinimalHeader] Navigating to docs page');
    const isDocsPage = currentPath.includes('/docs');
    if (!isDocsPage) {
      window.location.href = window.location.pathname + '/docs';
    }
  }
</script>