          features: [
            { icon: 'ğŸ“', text: 'ã‚¿ã‚¤ãƒã‚°ãƒ©ãƒ•ã‚£ä¸­å¿ƒã®è¨­è¨ˆ' },
            { icon: 'ğŸ¨', text: 'ãƒŸãƒ‹ãƒãƒ«ãªã‚«ãƒ©ãƒ¼ãƒ‘ãƒ¬ãƒƒãƒˆ' },
