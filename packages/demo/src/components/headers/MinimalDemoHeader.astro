---
interface Props {
  currentPage?: 'demo' | 'docs';
}

const { currentPage = 'demo' } = Astro.props;

const isProd = import.meta.env.PROD;
const homePath = isProd ? '/gitlyte/' : '/';
const docsPath = isProd ? '/gitlyte/docs' : '/docs';
---

<header class="minimal-header">
  <div class="container">
    <nav class="minimal-nav">
      <div class="nav-brand">
        <a href={homePath} class="brand-link">
          <h1>GitLyte</h1>
        </a>
      </div>
      <div class="nav-links">
        <button class={`nav-link ${currentPage === 'demo' ? 'nav-active' : ''}`} onclick="showDemo()">Home</button>
        <button class={`nav-link ${currentPage === 'docs' ? 'nav-active' : ''}`} onclick="showDocs()">Documentation</button>
        <a href="https://github.com/wadakatu/gitlyte" class="nav-link" target="_blank" rel="noopener">GitHub</a>
      </div>
    </nav>
  </div>
</header>

<style>
  /* Minimal Header - 統一デザイン */
  .minimal-header {
    border-bottom: 1px solid #e5e5e5;
    background-color: #ffffff;
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 2rem;
    width: 100%;
    box-sizing: border-box;
  }

  .minimal-nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 0;
  }

  .brand-link {
    text-decoration: none;
    color: #1a1a1a;
  }

  .brand-link h1 {
    margin: 0;
    font-size: 1.5rem;
    font-weight: 600;
    letter-spacing: -0.02em;
  }

  .nav-links {
    display: flex;
    gap: 2rem;
  }

  .nav-link {
    background: none;
    border: none;
    text-decoration: none;
    color: #666666;
    font-size: 0.875rem;
    font-weight: 500;
    transition: color 0.2s ease;
    position: relative;
    cursor: pointer;
    font-family: inherit;
  }

  .nav-link:hover,
  .nav-link.nav-active {
    color: #1a1a1a;
  }

  .nav-link.nav-active::after {
    content: '';
    position: absolute;
    bottom: -1rem;
    left: 0;
    right: 0;
    height: 1px;
    background-color: #1a1a1a;
  }

  /* レスポンシブ対応 */
  @media (max-width: 768px) {
    .minimal-nav {
      flex-direction: column;
      gap: 1rem;
      padding: 0.75rem 0;
    }

    .nav-links {
      gap: 1rem;
    }
  }
</style>

<script>
  // AI生成レイアウトと同じナビゲーション機能
  function showDemo() {
    const currentPath = window.location.pathname;
    const isDemoPage = !currentPath.includes('/docs');
    if (!isDemoPage) {
      window.location.href = window.location.pathname.replace('/docs', '');
    }
  }

  function showDocs() {
    const currentPath = window.location.pathname;
    const isDocsPage = currentPath.includes('/docs');
    if (!isDocsPage) {
      window.location.href = window.location.pathname + '/docs';
    }
  }
</script>