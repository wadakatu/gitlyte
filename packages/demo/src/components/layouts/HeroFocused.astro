---
import HeroFocusedLayout from '@gitlyte/shared/components/Layout/HeroFocusedLayout.astro';

export interface Props {
  title: string;
  description: string;
  stats: {
    stars: number;
    forks: number;
    issues: number;
  };
}

const { title, description, stats } = Astro.props;
---

<HeroFocusedLayout title={title} description={description} stats={stats} currentPage="home" isDemo={true} />