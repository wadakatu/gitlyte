---
import MinimalLayout from '@gitlyte/shared/components/Layout/MinimalLayout.astro';

export interface Props {
  title: string;
  description: string;
  stats: {
    stars: number;
    forks: number;
    issues: number;
  };
}

const { title, description, stats } = Astro.props;

---

<MinimalLayout title={title} description={description} stats={stats} />