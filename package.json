{
  "name": "gitlyte",
  "version": "1.1.0",
  "private": true,
  "description": "GitHub Action to generate beautiful static websites from your repository using AI",
  "author": "wadakatu",
  "license": "ISC",
  "homepage": "https://github.com/wadakatu/gitlyte",
  "repository": {
    "type": "git",
    "url": "https://github.com/wadakatu/gitlyte.git"
  },
  "keywords": [
    "github-action",
    "ai",
    "static-site-generator",
    "landing-page",
    "anthropic",
    "openai",
    "google-ai"
  ],
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.ts -o dist --license licenses.txt",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "biome lint .",
    "lint:fix": "biome lint --fix .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --fix .",
    "ci:check": "pnpm run build && pnpm run test:run && pnpm run format && pnpm run lint"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "@ai-sdk/anthropic": "^3.0.1",
    "@ai-sdk/google": "^3.0.1",
    "@ai-sdk/openai": "^3.0.1",
    "ai": "^6.0.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/node": "^20.19.27",
    "@vercel/ncc": "^0.38.3",
    "@vitest/coverage-v8": "^4.0.16",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">= 20"
  },
  "type": "module"
}
